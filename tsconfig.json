{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "environment.d.ts" // Asegúrate de que este archivo esté incluido
  ],
  "exclude": ["node_modules"]
}
